---
import Layout from '../layouts/Layout.astro';
//Para mostrar la colección 
import { getCollection } from 'astro:content';

const books  = await getCollection('books')



---

<Layout title="Libros de Desarrollo Personal">
<main>
		<h1 class=" text-center text-7xl font-extrabold mb-24">Dev <span class="block">Book</span></h1>
		

	

	<section aria-label="Libros recomendados para tu desarrollo personal" >
		<div class="px-4 mx-auto max-w-screen-xl ">
			<div class="grid md:grid-cols-2 gap-6">
				{books.map( book =>{
					const {slug, data} = book
					const {title, author, img, readtime, description, buy } = data
					
					return (
						<article class="flex"  >
							<a href={`/libro/${slug}`} class="mb-6 xl:mb-0 transition hover:scale-110 mr-4 md:mr-0 ">
								<img transition:name={`img-${slug}`} src={`/${img}`} alt={title} class="w-full rounded-lg mr-5  md:w-48   " />
							</a>
							<div class="flex flex-col justify-center">
								<h2 transition:name={`title-${slug}`} class="mb-2 text-2xl font-bold leading-tight text-white">{title}</h2>
								<p class="mb-4 text-gray-300 max-w-sm">{description}</p>
								<span class="text-xs">⌛ Lectura en {readtime} minutos</span>
							</div>
							
							
						
						</article>
					)
				})}
			</div>

		</div>
	</section>
</main>
</Layout>


